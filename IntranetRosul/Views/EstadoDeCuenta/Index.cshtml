
@{
    Layout = "~/Views/Shared/_BacKOfficeCC.cshtml";
    
}


<!--main content start-->
<section id="main-content" style="margin-left: 0px;" >
    <section class="wrapper site-min-height">
        <div class="row">
            
            <div class="showback">
                <h3><i class="fa fa-angle-right"></i> Estado de Cuenta</h3>
                <p>Nombre: @ViewBag.CardName </p>
                <p>Local: @ViewBag.Local</p>
            </div>
            <div class="fechahoy"> @DateTime.Now.ToString()  </div>
            <div class="row">


                <div class="col-lg-12">

                    <div class='col-sm-3'>
                        <div class="form-group">
                            <input id="codeCard" type='hidden' value="@ViewBag.CodeCard" />
                            <div  class='input-group date' id='datetimepicker1'>
                                <input type='text' class="form-control fechaIni" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class='col-sm-3'>
                        <div class="form-group">
                            <div class='input-group date' id='datetimepicker2'>
                                <input type='text'  class="form-control fechaFin" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <a id="btnConsulta" class="btn btn-primary" >Consultar</a>
                        <a href="javascript:window.print()" class="btn btn-warning" >Imprimir</a>
                    </div>


                </div>



            </div>
        </div>
 

        <section id="unseen">
          
                <div class="resultadosEC">

				</div>
                  
                   
                  
                  
                
          
            <div>Generacion de mora por dias de atraso</div>
            <div class="row">
                <div class='col-sm-8'>
                    
                </div>
                <div class='col-sm-4'>
                    <div class="">

                        <span class="badge bg-inverse">Dias atrasados<span class="badge bg-dangerCC">@ViewBag.dias</span></span>
                    </div>
                </div>
            </div>
</section>
    </section>
</section>
