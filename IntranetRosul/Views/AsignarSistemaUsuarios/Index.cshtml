@model IEnumerable<IntranetRosul.Models.AsignarSistemaUsuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Backend.cshtml";
}


<!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->
<!--main content start-->
<section id="main-content">
    <section class="wrapper site-min-height">
        <h3><i class="fa fa-angle-right"></i>MANTENIMIENTO ASIGNAR SISTEMA </h3>
        <p>
            @Html.ActionLink("Asignar Sistema", "Create",null, new { @class = "btn btn-success" })
        </p>
        <table class="table table-bordered table-striped table-condensed">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Sistemas.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sistemas.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.ActionLink("Sistema", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) 
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
        </section>
</section>