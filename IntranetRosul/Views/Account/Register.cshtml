@model IntranetRosul.Models.RegisterViewModel
@{
    ViewBag.Title = "Crear Usuario";
    Layout = "~/Views/Shared/_Backend.cshtml"; 
}
<!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->
<!--main content start-->
<section id="main-content">
    <section class="wrapper site-min-height">
    <h3><i class="fa fa-angle-right"></i>MANTENIMIENTO > @ViewBag.Title</h3>



    @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <br>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(m => m.Primer_Nombre, new { @class = "col-md-8 control-label" })
                @Html.TextBoxFor(m => m.Primer_Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Primer_Nombre, "", new { @class = "text-danger" })

            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.Segundo_Nombre, new { @class = "col-md-8 control-label" })
                @Html.TextBoxFor(m => m.Segundo_Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Primer_Nombre, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.Primer_Apellido, new { @class = "col-md-8 control-label" })
                @Html.TextBoxFor(m => m.Primer_Apellido, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Segundo_Apellido, "", new { @class = "text-danger" })


            </div>
            <div class="col-md-3">
                @Html.LabelFor(m => m.Segundo_Apellido, new { @class = "col-md-8 control-label" })
                @Html.TextBoxFor(m => m.Segundo_Apellido, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Segundo_Apellido, "", new { @class = "text-danger" })


            </div>

        </div>

        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(m => m.cod_empleado, new { @class = "col-md-8 control-label" })
                @Html.TextBoxFor(m => m.cod_empleado, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.cod_empleado, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-3">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-8 control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-3">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-8 control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-3">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-8 control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
      <br>
       
        <div class="form-group">
            <div class="col-md-9">
                </div>
                <div class="col-md-3">
                    <br><br>
                  
                    <button class="btn btn-danger" href="../Usuarios/Index" type="button">Cancelar</button>
                    <button class="btn btn-default" href="#" type="submit"> Crear usuario</button>
                    <!-- <hr>-->
                    <!-- <div class="registration">
                Don't have an account yet?<br />
                <a class="" href="#">
                    Create an account
                </a>
            </div>-->
                </div>
            </div>

            <clear></clear>
    }

    </section>
</section>