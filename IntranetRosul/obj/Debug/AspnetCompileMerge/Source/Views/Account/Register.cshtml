@model IntranetRosul.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>


@using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-login", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h2 class="form-login-heading">
        <img src="~/Content/img/logo.png" alt="GRUPO ROSUL" height="auto" width="300px" />

    </h2>
    <div class="login-wrap">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.LabelFor(m => m.Primer_Nombre, new { @class = "col-md-8 control-label" })
        @Html.TextBoxFor(m => m.Primer_Nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Primer_Nombre, "", new { @class = "text-danger" })
        <br>
        @Html.LabelFor(m => m.Segundo_Nombre, new { @class = "col-md-8 control-label" })
        @Html.TextBoxFor(m => m.Segundo_Nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Primer_Nombre, "", new { @class = "text-danger" })
        <br>
        @Html.LabelFor(m => m.Primer_Apellido, new { @class = "col-md-8 control-label" })
        @Html.TextBoxFor(m => m.Primer_Apellido, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Segundo_Apellido, "", new { @class = "text-danger" })
        <br>
        @Html.LabelFor(m => m.Segundo_Apellido, new { @class = "col-md-8 control-label" })
        @Html.TextBoxFor(m => m.Segundo_Apellido, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Segundo_Apellido, "", new { @class = "text-danger" })
        <br>
        @Html.LabelFor(m => m.cod_empleado, new { @class = "col-md-8 control-label" })
        @Html.TextBoxFor(m => m.cod_empleado, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.cod_empleado, "", new { @class = "text-danger" })
        <br>
        @Html.LabelFor(m => m.Email, new { @class = "col-md-8 control-label" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        <br>
        @Html.LabelFor(m => m.Password, new { @class = "col-md-8 control-label" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        <br>
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-8 control-label" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })

            <button class="btn btn-theme btn-block" href="index.html" type="submit"><i class="fa fa-lock"></i> Crear usuario</button>
            <!-- <hr>-->
            <!-- <div class="registration">
               Don't have an account yet?<br />
               <a class="" href="#">
                   Create an account
               </a>
           </div>-->

        </div>

}

